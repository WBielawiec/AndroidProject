<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:padding="16pt"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_parse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Pokaż na mapie"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="360dp"
        android:height="80dp"
        android:gravity="center"
        android:text="Potrząśnij telefonem aby wylosować kurs walut."
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:visibility="invisible" />

    <EditText
        android:id="@+id/plnto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/buycurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/sellcurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/plninfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/plnto"
        android:width="60dp"
        android:height="30dp"
        android:gravity="right"
        android:text="ILOŚĆ"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/buyinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/buycurrency"
        android:height="30dp"
        android:gravity="right"
        android:text="KUPNO"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sellinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/sellcurrency"
        android:height="30dp"
        android:gravity="right"
        android:text="SPRZEDAŻ"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible" />

</RelativeLayout>